<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ms"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/txt01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSD"
        android:layout_margin="20sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#87CEFA"
        android:layout_toRightOf="@+id/img1"/>
    <TextView
        android:id="@+id/txt02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All time Great"
        android:layout_margin="5sp"
        android:textSize="20sp"
        android:textColor="#FFA07A"
        android:layout_toRightOf="@+id/img1"
        android:layout_below="@+id/txt01"/>
    <TextView
        android:id="@+id/txt03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07"
        android:textSize="20sp"
        android:layout_margin="5sp"
        android:textColor="#F4A460"
        android:layout_toRightOf="@+id/img1"
        android:layout_below="@+id/txt02"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info."
        android:background="#1365c0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/img1"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit the App"
        android:background="#FF4500"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:textColor="#F5FFFA"
        android:layout_margin="20dp"/>

</RelativeLayout>